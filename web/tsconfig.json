{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES6",
    "outDir": "./dist",
    "lib": ["dom", "es5", "es2015"],
    "types": [],
    "baseUrl": "./node_modules",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
